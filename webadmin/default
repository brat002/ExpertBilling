<VirtualHost *:80>
        ServerAdmin webmaster@localhost

        DocumentRoot /opt/ebs/web/ebscab
        <Directory />
              <IfVersion < 2.3 >
                Order allow,deny
                Allow from all
              </IfVersion>
              <IfVersion >= 2.3>
                Require all granted
              </IfVersion>
        </Directory>

        Alias /media/ /opt/ebs/web/ebscab/media/

        <Directory /opt/ebs/web/ebscab/media>
              <IfVersion < 2.3 >
                Order allow,deny
                Allow from all
              </IfVersion>
              <IfVersion >= 2.3>
                Require all granted
              </IfVersion>
        </Directory>
        
        Alias /static/ /opt/ebs/web/ebscab/static/

        <Directory /opt/ebs/web/ebscab/static>
              <IfVersion < 2.3 >
                Order allow,deny
                Allow from all
              </IfVersion>
              <IfVersion >= 2.3>
                Require all granted
              </IfVersion>
        </Directory>
        
        Alias /admin_media/ /opt/ebs/venv/lib/python2.7/site-packages/django/contrib/admin/media/

        <Directory /opt/ebs/venv/lib/python2.7/site-packages/django/contrib/admin/media/>
              <IfVersion < 2.3 >
                Order allow,deny
                Allow from all
              </IfVersion>
              <IfVersion >= 2.3>
                Require all granted
              </IfVersion>
        </Directory>
        
		WSGIApplicationGroup %{GLOBAL}
        WSGIScriptAlias / /opt/ebs/web/django.wsgi

        ErrorLog /opt/ebs/web/error.log

        # Possible values include: debug, info, notice, warn, error, crit,
        # alert, emerg.
        LogLevel warn

        CustomLog /var/log/apache2/access.log combined

</VirtualHost>
